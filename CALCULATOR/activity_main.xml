<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="16dp">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Casio"
        android:textSize="30sp"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/edit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="0"
        android:layout_below="@id/text"
        android:layout_marginTop="20dp"
        android:gravity="end"
        android:inputType="numberDecimal"
        android:textSize="20sp" />

    <!-- Row 1: 1 2 3 -->
    <Button
        android:id="@+id/bt1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/edit1"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:text="1"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_toEndOf="@id/bt1"
        android:layout_alignBaseline="@id/bt1"
        android:layout_marginStart="15dp"
        android:text="2"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bt3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_toEndOf="@id/bt2"
        android:layout_alignBaseline="@id/bt2"
        android:layout_marginStart="15dp"
        android:text="3"
        android:textSize="20sp" />

    <!-- Row 2: 4 5 6 -->
    <Button
        android:id="@+id/bt4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/bt1"
        android:layout_alignStart="@id/bt1"
        android:layout_marginTop="10dp"
        android:text="4"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bt5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_toEndOf="@id/bt4"
        android:layout_alignBaseline="@id/bt4"
        android:layout_marginStart="15dp"
        android:text="5"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bt6"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_toEndOf="@id/bt5"
        android:layout_alignBaseline="@id/bt5"
        android:layout_marginStart="15dp"
        android:text="6"
        android:textSize="20sp" />

    <!-- Row 3: 7 8 9 -->
    <Button
        android:id="@+id/bt7"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/bt4"
        android:layout_alignStart="@id/bt4"
        android:layout_marginTop="10dp"
        android:text="7"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bt8"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_toEndOf="@id/bt7"
        android:layout_alignBaseline="@id/bt7"
        android:layout_marginStart="15dp"
        android:text="8"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bt9"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_toEndOf="@id/bt8"
        android:layout_alignBaseline="@id/bt8"
        android:layout_marginStart="15dp"
        android:text="9"
        android:textSize="20sp" />

    <!-- Row 4: . 0 C -->
    <Button
        android:id="@+id/dot"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/bt7"
        android:layout_alignStart="@id/bt7"
        android:layout_marginTop="10dp"
        android:text="."
        android:textSize="25sp" />

    <Button
        android:id="@+id/zero"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_toEndOf="@id/dot"
        android:layout_alignBaseline="@id/dot"
        android:layout_marginStart="15dp"
        android:text="0"
        android:textSize="20sp" />

    <Button
        android:id="@+id/clear"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_toEndOf="@id/zero"
        android:layout_alignBaseline="@id/zero"
        android:layout_marginStart="15dp"
        android:text="C"
        android:textSize="20sp" />

    <!-- Right-side operations -->
    <Button
        android:id="@+id/add"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignTop="@id/bt1"
        android:layout_alignParentEnd="true"
        android:text="+"
        android:textSize="20sp" />

    <Button
        android:id="@+id/sub"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_below="@id/add"
        android:layout_alignEnd="@id/add"
        android:layout_marginTop="10dp"
        android:text="-"
        android:textSize="20sp" />

    <Button
        android:id="@+id/mul"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_below="@id/sub"
        android:layout_alignEnd="@id/sub"
        android:layout_marginTop="10dp"
        android:text="ร"
        android:textSize="20sp" />

    <Button
        android:id="@+id/div"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_below="@id/mul"
        android:layout_alignEnd="@id/mul"
        android:layout_marginTop="10dp"
        android:text="รท"
        android:textSize="20sp" />

    <!-- Equals Button -->
    <Button
        android:id="@+id/eql"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/clear"
        android:layout_marginTop="10dp"
        android:text="="
        android:textSize="20sp" />

</RelativeLayout>

